<launch>
  <!-- Dataset Recorder Node -->
  <node type="record_training_data.py" name="record_training_data"
    pkg="ml_comprobo" output="screen">

    <param name="~save_filename" value="$(find ml_comprobo)/datasets/test.npy"/>
    <param name="~dodgeball_prefix" value="unit_sphere"/>
    <param name="~robot_name" value="mobile_base"/>
    <param name="~num_dodgeballs" value="5"/>
  </node>

  <!-- Custom Teleop Node -->
  <node type="training_controller.py" name="training_controller"
    pkg="ml_comprobo" output="screen"/>

  <!-- RVIZ Node -->
  <!-- <node type="rviz" name="rviz" pkg="rviz"
    args="-d $(find ml_comprobo)/rviz/config.rviz" /> -->

</launch>
